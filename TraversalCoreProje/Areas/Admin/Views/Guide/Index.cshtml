@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>GÖRSEL</th>
            <th>İSİM SOYİSİM</th>
            <th>AÇIKLAMA</th>
            <th>DURUM</th>
            <th>DÜZENLE</th>
        </tr>
         @foreach (var item in Model)
                {
                     count++;
                 <tr>
                        <td>@count</td>
                        <td><img src="@item.Image" alt="Avatar" class="rounded-circle avatar avatar-s pull-up" /></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                        <td>@item.Description</td>
            @if (item.Status == true)
            {
                <td>
                    <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-danger">Pasif Yap!</a>
                </td>
            }
            else
            {
                <td>
                    <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Aktif Yap!</a>
                </td>
            }
                        <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
                        </tr>
                   }
                   </table>
                    <a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Oluştur!</a>